{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": [
    "example/demos.ts",
    "example/react.tsx",
    "src/arc-progress.tsx"
  ],
  "include": [
    "src/*",
    "example/**/*",
    "static/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
